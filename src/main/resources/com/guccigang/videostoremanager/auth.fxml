                    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="2">
                        <top>
                            <Button mnemonicParsing="false" onAction="#onClickedExitButton"
                                    prefWidth="80.0" styleClass="buttonLogin"
                                    stylesheets="@JVMStyleSheet.css" text="Exit"
                                    BorderPane.alignment="CENTER"/>
                        </top>
                    </BorderPane>
                    <BorderPane prefHeight="200.0" prefWidth="200.0">
                        <top>
                            <Button mnemonicParsing="false" onAction="#onClickedLoginButton"
                                    prefWidth="80.0" styleClass="buttonLogin"
                                    stylesheets="@JVMStyleSheet.css" text="Login"
                                    BorderPane.alignment="CENTER"/>
                        </top>
                    </BorderPane>
                    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
                        <top>
                            <Button mnemonicParsing="false" onAction="#onClickedRegisterButton"
                                    prefWidth="80.0" styleClass="buttonLogin"
                                    stylesheets="@JVMStyleSheet.css" text="Register"
                                    BorderPane.alignment="CENTER"/>
                        </top>
                    </BorderPane>
                </GridPane>
                <BorderPane prefHeight="200.0" prefWidth="200.0"/>
            </VBox>
        </GridPane>
    </AnchorPane>
</AnchorPane>
