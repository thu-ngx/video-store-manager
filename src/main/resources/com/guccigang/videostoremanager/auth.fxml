                            <Label alignment="TOP_LEFT" text="Username" textAlignment="CENTER"
                                   BorderPane.alignment="CENTER">
                                <font>
                                    <Font size="18.0"/>
                                </font>
                            </Label>
                        </center>
                    </BorderPane>
                    <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
                        <center>
                            <Label alignment="TOP_LEFT" text="Password" textAlignment="CENTER"
